<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="Total Responses:"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:background="#540D44"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Response 1: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:text="Student 1"
                    android:layout_height="wrap_content"
                    android:id="@+id/m2"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Response 2: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:text="Student 2"
                    android:layout_height="wrap_content"
                    android:id="@+id/m3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Response 3: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:text="Student 3"
                    android:layout_height="wrap_content"
                    android:id="@+id/m4"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Response 4: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:text="Student 4"
                    android:layout_height="wrap_content"
                    android:id="@+id/m5"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/l1"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/close2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/shape3"
            android:textStyle="bold"
            android:padding="5dp"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#540D44"
            android:text="Go Back "/>

    </LinearLayout>

</RelativeLayout>
