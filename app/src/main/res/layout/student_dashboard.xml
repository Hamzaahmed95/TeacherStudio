<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:background="#540D44">

        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="25dp"
            android:gravity="center"
            android:text="Student Dashboard"/>

        <ImageView
            android:layout_width="50dp"
            android:padding="10dp"
            android:id="@+id/logout"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"
            android:src="@drawable/logout"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="150dp"
        android:padding="20dp"
        android:layout_height="150dp"
        android:src="@drawable/student"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#986d8e"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_height="70dp"
                android:src="@drawable/anc"/>
        <Button
            android:gravity="center"
            android:id="@+id/viewAnnoucements"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annoucement"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#87557c"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_height="70dp"
                android:src="@drawable/schedule"/>
        <Button
            android:id="@+id/rescheduleDemo"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reschedule Demo "/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#763d69"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_height="70dp"
                android:src="@drawable/team"/>
        <Button
            android:id="@+id/registerTeams"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Teams"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#652556"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_height="70dp"
                android:src="@drawable/queries"/>
        <Button
            android:id="@+id/postQueries"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Queries"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#540d44"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_height="70dp"
                android:src="@drawable/slot"/>
        <Button

            android:id="@+id/demoSlots"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Demo Slot"/>
            </LinearLayout>

    </LinearLayout>

</LinearLayout></ScrollView>