<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center|top"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/linearLayout"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:background="#540D44">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-condensed"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Teacher Dashboard"/>

            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                android:id="@+id/logout"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"
                android:src="@drawable/logout"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/teaching"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#986d8e"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_height="70dp"
                    android:src="@drawable/anc"/>
                <Button
                    android:gravity="center"
                    android:id="@+id/postAnnoucements"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="45dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post Annoucements"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#87557c"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_height="70dp"
                    android:src="@drawable/schedule"/>
                <Button
                    android:id="@+id/uploadDemo"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="45dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Demo Slots"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#763d69"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_height="70dp"
                    android:src="@drawable/team"/>
                <Button
                    android:id="@+id/approveRequest"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginRight="45dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approve Team Request"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#652556"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_height="70dp"
                    android:src="@drawable/queries"/>
                <Button
                    android:id="@+id/answerQueries"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginRight="45dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Queries"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#540d44"
                android:layout_margin="5dp"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_height="70dp"
                    android:src="@drawable/slot"/>
                <Button

                    android:id="@+id/viewStudentDetails"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="45dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Student Details"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout></ScrollView>